        $("#create_employee").click(function () {
            var div = $("#modal-body_create");

            var cookievalue = $.cookie('AccountCookies');
            if (cookievalue = "" || cookievalue.length <= 0) {
                location.reload();
            }
            else {
                div.load("/Employee/Create_Employee", function () {
                });
            }



