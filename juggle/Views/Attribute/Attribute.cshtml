                        </script>

                        <script>
                            $(document).ready(function () {
                                $("#create_Attribute").click(function () {
                                    var div = $("#modal-body_create_category");
                                    div.load("/Attribute/Create_attribute", function () {
                                    });
                                });
                            });

                        </script>




        </div>
